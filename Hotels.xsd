<xsd:schema targetNamespace="https://acwang123w.github.io/CSE445-Assignment-4/Hotels.xsd"
            elementFormDefault="qualified" 
            attributeFormDefault="unqualified">
            
  <xsd:annotation>
    <xsd:documentation xml:lang="en">
      Assignment 4 Hotel Schema
    </xsd:documentation>
  </xsd:annotation>

  <xsd:element name="Hotels" type="HotelsType"/>
  <xsd:complexType name="HotelsType">
    <xsd:sequence>
      <xsd:element name="Hotel" type="HotelDetails" minOccurs="1" maxOccurs="unbounded"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="HotelDetails">
    <xsd:sequence>
      <xsd:element name="Name" type="xsd:string" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="Phone" type="PhoneType" minOccurs="1" maxOccurs="unbounded"/>
      <xsd:element name="Address" type="AddressType" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="Rating" type="xsd:decimal" minOccurs="0" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="AddressType">
    <xsd:attribute name="Number" type="xsd:positiveInteger" use="required"/>
    <xsd:attribute name="Street" type="xsd:string" use="required"/>
    <xsd:attribute name="City" type="xsd:string" use="required"/>
    <xsd:attribute name="State" type="xsd:string" use="required"/>
    <xsd:attribute name="Zip" type="xsd:string" use="required"/>
    <xsd:attribute name="NearestAirport" type="xsd:string" use="optional"/>
  </xsd:complexType>
  <!--
 Define the allowed format for the Phone number with a regular exp. 
-->
  <xsd:simpleType name="PhoneType">
    <xsd:restriction base="xsd:string">
      <xsd:pattern value="\d{3}\-\d{3} \d{4}"/>
    </xsd:restriction>
  </xsd:simpleType>
</xsd:schema>